# Copy to .env and fill in values
OPENAI_API_KEY=""

# Required: shared secret to protect /api/realtime/token from unauthenticated use.
# NOTE: This is MVP protection (a determined attacker can extract it from a shipped app).
TOKEN_SERVICE_SHARED_SECRET=""

REALTIME_EPHEMERAL_TTL_SECONDS=600
REALTIME_VOICE="alloy"

# Optional: override which OpenAI model IDs correspond to the UI modes.
# Defaults (if omitted): gpt-realtime-mini / gpt-realtime
REALTIME_MINI_MODEL_ID="gpt-realtime-mini"
REALTIME_MODEL_ID="gpt-realtime"

# Optional: best-effort per-instance requests-per-minute rate limit for /api/realtime/token
REALTIME_TOKEN_RPM=30
